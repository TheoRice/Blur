{
  "manifest_version": 2,

  "name": "Blur: IMDB Episode Blurrer",
  "description": "Hides potential-spoiler information from IMDB.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "resources/icon.png",
    "default_title": "Blur! Prevent potential-spoiler information from IMDB"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "css": [
        "./css/core.css"
      ],
      "js": [
        "./js/core.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "webNavigation",
    "*://*/*"
  ]
}
